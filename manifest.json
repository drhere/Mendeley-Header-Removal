{
	"manifest_version": 2,

	"name": "Mendeley Header Removal",
	"description": "Remove Header while reading in Mendeley",
	"version": "0.1",

	"icons": { "16": "16.png","48":"48.png", "128": "128.png" },

	"content_scripts": [
		{
			"matches": ["<all_urls>"],
            "js": ["script.js"],
            "run_at": "document_idle"
		}
	]
}
